@model WebTest.ViewModel.OrderViewModel

@{
    ViewData["Title"] = "CreateOrder";
}
<h1>Create new Order</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form  asp-controller="Home" asp-action="AddOrder" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label class="control-label col-4">Order Name</label>
                <input class="form-control col-8" value="New order"/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Customers" class="control-label col-4"></label>
                <select asp-for="CustomerId" style="width:250px" asp-items="@Model.Customers">
                </select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Products" class="control-label col-4"></label>
                 <select asp-for="ProductId" asp-items="@Model.Products"style="width:250px" >
                </select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Amount" class="control-label col-4"></label>
                <input asp-for="Amount" class="form-control col-8" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="OrderDate" class="control-label col-4"></label>
                <input asp-for="OrderDate" class="form-control col-8" />
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group text-right">
                <input type="submit" value="Create Order" class="btn btn-primary " />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

