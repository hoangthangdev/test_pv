            <label class="col-4">Enter category to search</label>
            <div class="col-3">
                <input />
            </div>
            <div class="col-5">
                <button type="submit">Search</button>
            </div>
        </div>
    </form>
    <div>
        <table>
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Product Name</th>
                    <th>Customer Name</th>
